<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100pt"
        android:textSize="10pt"
        android:id="@+id/editText"
        android:text="Choose Meme Type" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vanilla Memes"
            android:id="@+id/vanilla_memes_radBtn"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:onClick="onRadioButtonClicked" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demotivational Posters"
            android:id="@+id/demotivational_posters_radBtn"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            />

    </RadioGroup>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:src="@drawable/successkid"
        android:layout_gravity="center"
        android:id="@+id/image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="30dp"
            android:paddingLeft="5dp"
            android:clickable="true"
             >


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera"
                android:id="@+id/camera_button"
                android:background="@null"
                android:onClick="takePhoto"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Take a picture"
                android:onClick="takePhoto"
                android:textSize="20sp"
                android:clickable="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_gallery"
                android:id="@+id/pic_from_gallery_button"
                android:background="@null"
                android:onClick="pickPhoto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textSize="20sp"
                android:onClick="pickPhoto"
                android:clickable="true" />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/edit_meme_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Meme -->"
        android:layout_marginBottom="65dp"
        />

    <!--FYI: Arrow by Jamison Wieser from the Noun Project -->

</LinearLayout>
















